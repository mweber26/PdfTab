<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="cam.pdftab"
      android:versionCode="1"
      android:versionName="0.1">

    <uses-sdk android:minSdkVersion="11" />

    <application android:label="@string/app_name" android:icon="@drawable/icon"
		android:hardwareAccelerated="true"
	>
        <activity android:name="FilesActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="PdfActivity" android:label="@string/app_name"
			android:theme="@style/Theme.NoBackground.NoTitle"
		>
        </activity>
    </application>

    <supports-screens android:smallScreens="true" android:normalScreens="true"
		android:largeScreens="true" android:anyDensity="true" />
</manifest> 
